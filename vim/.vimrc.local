colorscheme molokai_dark
set listchars=tab:▸\ ,eol:¬
let g:indent_guides_enable_on_vim_startup = 0

let g:go_fmt_command = "goimports"

fun! StripTrailingWhitespaces()
    let l = line(".")
    let c = col(".")
    %s/\s\+$//e
    call cursor(l, c)
endfun

autocmd BufWritePre * :call StripTrailingWhitespaces()
